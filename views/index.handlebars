<div class="container bg">
	
	<div class="row">
	    <div class="center col-sm-12">
	        <h1>Eat-Da-Burger App</h1>
	       </div>
  	</div>
	
	{{!-- burger lists_____________________________________________ --}}
	<div class="row main">
	    <div class="col-sm-6 cooked">

			<br>
			<h2>Burgers Available To Eat!</h2>
			<br>
			<ul>
			  {{#each burgers}}
			    {{#unless this.devoured}}
			      <li>
			      	<div>
					  {{this.id}}
			        {{this.burger_name}}
					</div>
					<div>
			        <form action="/{{this.id}}?_method=PUT" method="POST">
			          <input type="hidden" name="devoured" value="true">
			          <button class=" eat" type="submit">Consume</button>
			        </form>
					</div>
			      </li>
			    {{/unless}}
			  {{/each}}
			</ul>

	    </div>

	    <div class="col-sm-6 eaten">

			<h2>Burgers That Have Been Eaten!</h2>
			
			  {{#each burgers}}
			    {{#if this.devoured}}
			      <li>
			      	{{this.id}}
			        {{this.burger_name}}

			      </li>
			    {{/if}}
			  {{/each}}
			
	    </div>

  	</div>
	<!-- end .row -->

	<div class="row">
	    <div class="center col-sm-12 add_food">

			<h2>Add A Burger!</h2>

			<form class="create-update-form" action="/" method="POST">

			  <div class="form-group">
			    <p>Enter a burger you want to order and click the Submit Order button.</p>
			    <input type="text" id="ca" name="burger_name">
			  </div>
			  
			  <button class="btn-primary" type="submit">Submit Order</button>
			</form>

	    </div>
	
  	</div>
	<!-- end .row -->

</div>